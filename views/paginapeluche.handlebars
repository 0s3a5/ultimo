<!DOCTYPE html>
<html lang="es">
<head>
    <link rel="stylesheet" href="/button.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galería</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            font-family: Arial, sans-serif;
            color: #fff;
            background-color: #00CED1;
        }

        .product-info {
            width: 400px;
            margin: 60px auto 30px auto; /* Añade margen superior para la separación */
            background-color: #00CED17;
            padding: 20px;
            color: white;
            border-radius: 10px;
            box-sizing: border-box;
        }

        .product-info img {
            display: block;
            width: 100%;
            max-width: 360px;
            height: auto;
            border-radius: 10px;
            background-color: white; /* Fondo blanco detrás de la imagen */
            padding: 10px; /* Espacio entre la imagen y el borde */
            margin-top: 15px; /* Separación superior */
            box-sizing: border-box;
        }

        .product-info input, .product-info button {
            display: block;
            width: 100%;
            margin: 10px 0;
        }

        .button {
            background-color: black;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- Product Info -->
    <div class="product-info">
        <img src="{{producto.link_imagen}}" alt="Descripción del producto">
        <p>{{producto.descripcion}}</p>

        <form id="carritoForm" action="/newcarrito" method="POST">
            <input type="hidden" name="id_asignado" value="{{user.id}}">
            <input type="hidden" name="id_producto" value="{{producto.id}}">
            <input type="hidden" name="precio_producto" value="{{producto.precio}}">
            <input type="hidden" name="imagen_producto" value="{{producto.link_imagen}}">
            <input type="hidden" name="nombre_producto" value="{{producto.nombre}}">

            <label for="cantidad_producto">Cantidad:</label>
            <input type="number" id="cantidad_producto" name="cantidad_producto" min="1" max="{{producto.stock}}" value="1">
            <button type="submit" class="btn btn-primary">Añadir al carrito</button>
        </form>
    </div>

<script>
    const images = document.querySelectorAll('.carousel-image');
    let currentIndex = 0;

    document.getElementById('prev').addEventListener('click', () => {
        images[currentIndex].classList.add('hidden');
        currentIndex = (currentIndex - 1 + images.length) % images.length;
        images[currentIndex].classList.remove('hidden');
    });

    document.getElementById('next').addEventListener('click', () => {
        images[currentIndex].classList.add('hidden');
        currentIndex = (currentIndex + 1) % images.length;
        images[currentIndex].classList.remove('hidden');
    });
</script>

</body>
</html>
